      <div class="modal-body">
		  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      	<div class="row">
      	<div class="col-lg-6">
            <h1 class="modal-title colorc52666 font24" id="myModalLabel">Signup</h1>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

            	<div class="row mt15">
            		<div class="col-lg-3"><%= f.label :name %></div>
            		<div class="col-lg-7"><%= f.text_field :name, autofocus: true, class: "form-control"  %></div>
					<div class="col-lg-2"></div>
            		
            	</div>
            	<div class="row mt15">
            		<div class="col-lg-3"><%= f.label :email %></div>
            		<div class="col-lg-7"><%= f.email_field :email, class: "form-control"  %></div>
					<div class="col-lg-2"></div>
            	</div>
            	<div class="row mt15">
            		<div class="col-lg-3"><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %></div>
            		<div class="col-lg-7"><%= f.password_field :password, autocomplete: "off", class: "form-control"  %></div>
					<div class="col-lg-2"></div>
            	</div>
            	<div class="row mt15">
            		<div class="col-lg-3">Gender:</div>
            		<div class="col-lg-3"><input type="radio"> <label>Male</label></div>
            		<div class="col-lg-4"><input type="radio"><label>Female</label> </div>
					<div class="col-lg-2"></div>
            	</div>
            	
            		<div class="row mt15 mb15">
            		<div class="col-lg-12 tac"><%= f.submit "Sign up with Cultural Hoops", class: "btn btn-primary"%></div>
            		
            	</div>
              <% end %>
			<div class="row mt10">
				<div class="col-lg-12 tac font11">*By Signing Up, you agree to the T&C</div>
				<div class="row mt8 mb8">
					<div class="col-lg-1"></div>
					<div class="col-lg-4 brt1 mt10"></div>
					<div class="col-lg-2 tac">OR</div>
					<div class="col-lg-4 brt1 mt10"></div>
					<div class="col-lg-1"></div>
				</div>

				<div class="col-lg-6 tac"><%= render partial: 'layouts/facebook_widget'%></div>
				<div class="col-lg-6 tac"><%= render partial: 'layouts/google_widget'%>
					<!--<a class="btn btn-social btn-google">-->
					<!--<i class="fa fa-google-plus"></i> Sign in with Google-->
					<!--</a>-->
				</div>
			</div>

  
