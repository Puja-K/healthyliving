<div class="modal fade" id="login" tabindex="-1" role="dialog"  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      
      <div class="modal-body">
      	<div class="row">
      	<div class="col-lg-12">
      		 <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h1 class="modal-title colorc52666 font24" id="myModalLabel">Sign in</h1>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                	<div class="row mt15">
						<div class="col-lg-3 tar"><%= f.label :email %>:</div>
                  		<div class="col-lg-7"><%= f.email_field :email, autofocus: true, class: "form-control" %></div>
						<div class="col-lg-2"></div>
                		
                	</div>
                	<div class="row mt15">
                  		<div class="col-lg-3 tar"><%= f.label :password %>:</div>
                  		<div class="col-lg-7"><%= f.password_field :password, class: "form-control" %></div>
						<div class="col-lg-2"></div>
                	</div>
			<div class="row mt15 mb10">
				<div class="col-lg-3">&nbsp;</div>
				<div class="col-lg-7"><% if devise_mapping.rememberable? -%>
					<div>
						<%= f.check_box :remember_me%>
						<%= f.label :remember_me%>
					</div>
					<% end -%></div>
				<div class="col-lg-2"></div>
			</div>

                	<div class="row mt10 mb15">
						<div class="col-lg-3">&nbsp;</div>
                		<div class="col-lg-9"><%= f.submit "Log in", class: "btn btn-md btn-primary" %></div>
                	</div>
              <%end%>
            	<div class="row mt10">
            		<div class="col-lg-12 tac font11">*By Signing Up, you agree to the T&C</div>
					<div class="row mt8 mb8">
					<div class="col-lg-1"></div>
            		<div class="col-lg-4 brt1 mt10"></div>
            		<div class="col-lg-2 tac">OR</div>
            		<div class="col-lg-4 brt1 mt10"></div>
					<div class="col-lg-1"></div>
					</div>

            		<div class="col-lg-6 tac"><%= render partial: 'layouts/facebook_widget'%></div>
            		<div class="col-lg-6 tac"><%= render partial: 'layouts/google_widget'%>
						<!--<a class="btn btn-social btn-google">-->
							<!--<i class="fa fa-google-plus"></i> Sign in with Google-->
						<!--</a>-->
					</div>
            	</div>
         </div>
     
      </div>
      
      
      </div>
      <!--
      <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="button" class="btn btn-primary">Save changes</button>
            </div>-->
      
    </div>
  </div>
</div>