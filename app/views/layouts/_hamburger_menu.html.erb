<div class="subhead">
	<div class="container">
		<div class="row">
			<div class="col-lg-8">
				<div class="shape dropdown hamburgerDiv">
					<!--<%= link_to coursesByCategory_path(1.to_i),class: "dropdown-toggle", id:"browLib"  do%>-->
						<!--<span class="glyphicon glyphicon-menu-hamburger colorLinkDark"></span> Browse The Library-->
