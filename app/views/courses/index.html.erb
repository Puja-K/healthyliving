<div class="container">
    <div class="col-lg-4 bgec adHeight">
      <div class="clearfix">
        <div class="tac bgc52666 colorfff font16 mt10 pt10 pb10 brb5">
         <a href="#" class="colorfff"> All Yoga Videos </a>
        </div>
        <ul class="list-unstyled bgfff mb10">
          <li class="brb1 pt5 pb5 pl8"><div>Index One</div><span class="colorLink">test</span></li>
          <li class="brb1 pt5 pb5 pl8"><div>Index One</div><span class="colorLink">test</span></li>
          <li class="brb1 pt5 pb5 pl8"><div>Index One</div><span class="colorLink">test</span></li>
          <li class="brb1 pt5 pb5 pl8"><div>Index One</div><span class="colorLink">test</span></li>
