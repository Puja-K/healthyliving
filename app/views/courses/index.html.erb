          <li class="brb1 pt5 pb5 pl8"><div>Index One</div><span class="colorLink">test</span></li>
        </ul>
        
        
      </div>
      
      
    </div>
    <div class="col-lg-8 tcHeight">
      <h3 class="mt15 colorc52666">Most Popular Courses</h3>
      <div class="row mb15">
          <% @courses.each do |course| %>
            <div class="col-lg-4 pr5 mb10 mt10 courseBox">
              <div class="courseDetails bgF6 ">
                <%= link_to image_tag(course.image.url), course, :alt => "yoga", :class => "yoga" %>

              <h5 class="pl8 pr8"><%= course.name %></h5>
              <div class="pl8 pr8 courseDesc"><%= course.description %></div>
              <div class="pl8 pr8 pt8 pb8 font12"> <strong>Teacher</strong>: <%= course.instructor.name%></div>
              </div>
              <div class="courseInfo bgF6 font12">
              <div class="row">
              <div class="col-lg-6 pr5">
                <div class="favDiv pl8 pt8 font11">
               <a href="#"><i class="fa fa-heart colorc52666"></i> Add to Favorite</a>
                </div>
                </div>
              <div class="col-lg-6 pl5">
                <div class="classificationDiv pt8 font11">
                <%= course.level %>
                </div>
              </div>
              </div>
              <div class="row">
              <div class="col-lg-12">
                <div class="ratingDiv pl8 pt8 pb8 pull-left">
                <div class="rating">
                    <% if course.reviews.length > 0 %>
                        <% avg_rating = course.reviews.average(:rating) %>
                        <div class ="star-rating pull-left mr8" data-score="<%=avg_rating%>"></div> <div class="color3 pull-left"><%= "(#{course.reviews.length})" %> Reviews </div>
                     <% else %>
                        <div class ="star-rating" data-score="0"></div>
                    <% end %>

                </div>

                </div>
              </div>

              </div>
              </div>
            </div>
        <%end %>





      
        <div class="clearfix col-lg-12 brt1 p0">
          <h3 class="mt15 mb15 colorLink">All Yoga Courses</h3>
        </div>
          <div id="courselistings">
              <%render 'courses'%>
          </div>
    </div>

</div>

<script type="text/javascript">
  $('.star-rating').raty({
      path: 'https://s3.amazonaws.com/culturehoops/stars/',
      hints: ['Not Bad', 'Good', 'Very Good', 'Excellent', 'Awesome'],
      readOnly: true,
      score: function() {
              return $(this).attr('data-score');
  }
  })

$(window).load(function(){
$(".adHeight").height($(".tcHeight").height());
});

</script>


