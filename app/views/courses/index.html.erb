<h1>Listing courses</h1>


  <div class="row">
    <% @courses.each do |course| %>
        <div class="col-md-3">
            <div class="thumbnail">
                
                <div class="caption">
                  <h3><%= course.name %></h3>
                  <p><%=course.level%></p>
                  <p><%=course.duration%></p>
                  <%= link_to 'Show', course, class:"btn btn-link" %>
                  <%= link_to 'Edit', edit_course_path(course), class:"btn btn-link" %>
                  <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-link"%>
                  
                </div>
            </div>
          </div>
      <% end %>
  </div> <! row ends-->





<br>

