




<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <div class="row">
        <%= form_for(@course, :html => { :multipart => true }) do |f| %>
            <% if @course.errors.any? %>
              <div id="error_explanation" class="alert alert-danger alert-dissmissable">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h4>

                <ul>
                <% @course.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :name %><br>
              <%= f.text_field :name, class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :category %><br>
              <%= f.collection_select :category_id, Category.order(:name), :id, :name , {:prompt => "Select Category" }, html_options = {class: 'form-control'} %>
            </div>
            <div class="form-group">
              <%= f.label :instructor %><br>
              <%= f.collection_select :instructor_id, Instructor.order(:name), :id, :name , {:prompt => "Select Instructor" }, html_options = {class: 'form-control'} %>
            </div>
            <div class="form-group">
              <%= f.label :description %><br>
              <%= f.text_area :description,  class: 'form-control'%>
            </div>
            <div class="form-group">
              <%= f.label :level %><br>
              <%= f.text_field :level, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :image %><br>
              <%= f.file_field :image, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.submit class: "btn btn-primary" %>
            </div>
          <% end %>            
    </div>
</div>
