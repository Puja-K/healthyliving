<div class="subhead">
	<div class="container">
		<div class="row">
			<div class="col-lg-8">
				<div class="text2 shape">
					<a href="/categories"> <span class="glyphicon glyphicon-menu-hamburger"></span> Browse The Library </a>
				</div>
			</div>
			<div class="col-lg-4">
				<div class="box2">
					<input type="search" class="form-control" />
				</div>
				<button class="btn box3 search">
					Search
				</button>
			</div>
		</div>
	</div>
</div>

<div class="container">
	

<h1>Listing categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Show', category, class:"btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_category_path(category), class:"btn btn-link" %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>




</div>
