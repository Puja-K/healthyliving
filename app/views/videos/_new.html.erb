<%= simple_form_for(@video, url: section_videos_path, remote: true, :html => { :multipart => true }) do |f| %>
	<div>
		<%= render 'shared/errors', object: @video %>
      <%= f.input :title%>
	   
	    <%= f.input :link, required: true, hint:'A link to the video on YouTube.' %>
	    
	 	<div class="form-actions">
	    <%= f.button :submit, class:'btn btn-primary' %>
		</div>
	</div>
  <% end %>



